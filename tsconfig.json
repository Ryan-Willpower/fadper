{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["dist/lib/*.ts"]
}
